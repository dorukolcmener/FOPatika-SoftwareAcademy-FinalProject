@model List<ApartmentViewModel>

@{
    var role = Context.Items["Role"];
    ViewBag.Role = role;
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">UID</th>
            <th scope="col">Block</th>
            <th scope="col">Floor</th>
            <th scope="col">Door</th>
            <th scope="col">Flat Type</th>
            <th scope="col">Name</th>
            <th scope="col">E-Mail</th>
            <th scope="col">Phone</th>
            <th scope="col"></th>
            @if(ViewBag.Role == 0) {
                <th scope="col"></th>
                <th scope="col"></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <td scope="row">@item.Block</td>
                <td>@item.Floor</td>
                <td>@item.Door</td>
                <td>@item.FlatType</td>
                <td>@item.UserName</td>
                <td>@item.EMail</td>
                <td>@item.Phone</td>
                <td><a class="btn btn-primary" href="@Url.Action("Details", "Apartments", new { id = item.Id })" role="button">Bills</a></td>
                @if(ViewBag.Role == 0) {
                    <td><a class="btn btn-warning" href="@Url.Action("Update", "Apartments", new { id = item.Id })" role="button">Edit</a></td>
                    <td><a class="btn btn-danger" href="@Url.Action("Delete", "Apartments", new { id = item.Id })" role="button">Delete</a></td>
                }
            </tr>
        }
    </tbody>
</table>