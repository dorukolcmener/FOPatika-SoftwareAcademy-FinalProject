@model BillViewModel

@{
    ViewData["Title"] = "Bills Page";
    var balance = (double)Context.Items["Balance"];
}

<div class="text-center d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Bill @Model.Id</h5>
        <p class="card-text">Performing this action will pay the bill!</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Current account balance is @balance</li>
        <li class="list-group-item">Bill amount is @Model.Amount</li>
        <li class="list-group-item">Remaining balance will be @(balance-Model.Amount)</li>
        <li class="list-group-item">Are you sure you want to pay the bill?</li>
    </ul>
    <div class="card-body d-flex flex-row justify-content-around">
        <form method="post">
        <input type="hidden" name="id" value=@Model.Id />
        <button class="btn btn-warning">Pay</button>
        </form>
        <a href="#" class="btn btn-secondary" onclick="history.go(-1);">Cancel</a>
    </div>
    </div>
</div>