@model BillViewModel

@{
    ViewData["Title"] = "Bills Page";
}

<div class="text-center d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Bill @Model.Id</h5>
        <p class="card-text">Performing this action will delete the bill!</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Are you sure that you want to delete the bill?</li>
    </ul>
    <div class="card-body d-flex flex-row justify-content-around">
        <form method="post">
        <input type="hidden" name="id" value=@Model.Id />
        <button class="btn btn-danger">Delete</button>
        </form>
        <a href="#" class="btn btn-secondary" onclick="history.go(-1);">Cancel</a>
    </div>
    </div>
</div>